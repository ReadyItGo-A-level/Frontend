<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/allalcoholsubcategory_item_rectangle"
    tools:context=".allalcohol.AllAlcoholSubCategoryFragment">

    <TextView
        android:id="@+id/textview_alcoholdetail_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰 내용"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textview_alcoholdetail_item_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="유저닉네임"
        app:layout_constraintEnd_toStartOf="@+id/textview_alcoholdetail_item_date"
        app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_item_content" />

    <TextView
        android:id="@+id/textview_alcoholdetail_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0000.00.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_item_content" />

</androidx.constraintlayout.widget.ConstraintLayout>