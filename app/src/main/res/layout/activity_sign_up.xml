<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignUpActivity"
    android:background="@color/white">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        app:contentInsetStart="0dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-1dp">

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원가입"
            android:textColor="#4E4E4E"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="반갑습니다, 회원님!\n아래 필수 내용을 입력해주세요."
            android:textColor="#433E50"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="3dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <EditText
                android:id="@+id/edNickname"
                android:layout_width="196dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@drawable/edittext_all_background"
                android:ems="10"
                android:hint="별명을 입력해주세요"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btnIdRepeated"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#F37413"
                android:minHeight="0dp"
                android:text="중복확인"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <TextView
            android:id="@+id/possibleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text=""
            android:textColor="#F37413"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/possibleId">

            <EditText
                android:id="@+id/edEmail"
                android:layout_width="245dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@drawable/edittext_all_background"
                android:ems="10"
                android:hint="이메일을 입력해주세요"
                android:inputType="textEmailAddress"
                android:paddingStart="15dp"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/edCertificationNum"
                app:layout_constraintTop_toBottomOf="@+id/edNickname"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btnEmailCertification"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#F37413"
                android:minHeight="0dp"
                android:text="인증 확인"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/edEmail"
                app:layout_constraintEnd_toEndOf="@+id/edCertificationNum"
                app:layout_constraintStart_toEndOf="@+id/edEmail"
                app:layout_constraintTop_toTopOf="@+id/edEmail"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <TextView
            android:id="@+id/sendCertificationNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="이메일로 인증번호를 전송하였습니다."
            android:visibility="gone"
            android:textColor="#F37413"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayout2" />

        <LinearLayout
            android:id="@+id/LinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sendCertificationNum">

            <EditText
                android:id="@+id/edCertificationNum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:background="@drawable/edittext_all_background"
                android:ems="10"
                android:hint="인증번호"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sendCertificationNum"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btnCompleteCertification"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#F37413"
                android:minHeight="0dp"
                android:text="인증 완료"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/edEmail"
                app:layout_constraintEnd_toEndOf="@+id/edCertificationNum"
                app:layout_constraintStart_toEndOf="@+id/edEmail"
                app:layout_constraintTop_toTopOf="@+id/edEmail"
                tools:ignore="MissingConstraints" />

        </LinearLayout>


        <EditText
            android:id="@+id/edPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_all_background"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/edPasswordConfirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/LinearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayout3"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext_all_background"
            android:ems="10"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/edPassword"
            app:layout_constraintTop_toBottomOf="@+id/edPassword"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/samePwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="비밀번호가 일치합니다."
            android:visibility="gone"
            android:textColor="#F37413"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/LinearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/edPasswordConfirm" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:text="약관 동의"
            android:textSize="13sp"
            android:textColor="#433E50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/samePwd"
            tools:ignore="MissingConstraints" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:textSize="13sp"
            android:textColor="#433E50"
            android:text="[필수] 만 19세 이상이며 모두 동의합니다."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="보기"
            android:textColor="#433E50"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edPasswordConfirm"
            app:layout_constraintTop_toTopOf="@+id/radioButton"
            tools:ignore="MissingConstraints" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/completeSignUp"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#F37413"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>