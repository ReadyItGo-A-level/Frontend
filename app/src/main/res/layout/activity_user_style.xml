<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".keyword.UserStyleActivity">

    <Button
        android:id="@+id/button5"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#F37413"
        android:text="취향 등록"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="채오니님의 술 취향 추천을 위한 간단한 설문조사입니다."
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView40"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="1. 원하는 도수를 선택해주세요"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:thumb="@drawable/userstyle_seekbar_thumb"
        android:max="4"
        android:progressTint="#F37413"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3\n보통"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/seekBar2"
        app:layout_constraintStart_toStartOf="@+id/seekBar2"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="5\n높은"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/seekBar2"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="1\n낮은"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/seekBar2"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="4"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/textView27"
        app:layout_constraintStart_toEndOf="@+id/textView25"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="2"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/textView25"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1만원"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/price_bar"
        app:layout_constraintTop_toBottomOf="@+id/price_bar" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100만원"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/price_bar"
        app:layout_constraintTop_toBottomOf="@+id/price_bar" />

    <SeekBar
        android:id="@+id/price_bar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="17dp"
        android:max="100"
        android:min="1"
        android:progressTint="#F37413"
        android:thumb="@drawable/userstyle_seekbar_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView33"
        app:layout_constraintTop_toBottomOf="@+id/textView37" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="4. 원하는 가격대를 선택해주세요"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup3" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="님의 취향을 알려주세요:)"
        android:textColor="#333333"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView40"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="3. 좋아하는 맛을 선택해주세요"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="2. 원하는 당도를 선택해주세요"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="17dp"
        android:max="4"
        android:progressTint="#F37413"
        android:thumb="@drawable/userstyle_seekbar_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3\n중간"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/seekBar3"
        app:layout_constraintStart_toStartOf="@+id/seekBar3"
        app:layout_constraintTop_toBottomOf="@+id/seekBar3" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:text="5\n달달한"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/seekBar3"
        app:layout_constraintTop_toBottomOf="@+id/seekBar3" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="4"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/textView30"
        app:layout_constraintStart_toEndOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/seekBar3" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="2"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/textView29"
        app:layout_constraintStart_toEndOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/seekBar3" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="1\n씁쓸한"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/seekBar3"
        app:layout_constraintTop_toBottomOf="@+id/seekBar3" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="(*중복 및 단일 선택 가능합니다)"
        android:textColor="#F37413"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView21"
        app:layout_constraintStart_toEndOf="@+id/textView21" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:chipSpacingHorizontal="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21">

        <com.google.android.material.chip.Chip
            android:id="@+id/carbon"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탄산"
            android:textAlignment="center"
            android:textColor="@color/checked_chip_textcolor"
            android:textSize="12sp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:checkedIconTint="#FFFFFF"
            app:chipBackgroundColor="@color/checked_chip_color"
            app:chipIconVisible="false"
            app:chipStrokeColor="#999999"
            app:chipStrokeWidth="1dp"
            app:closeIconVisible="false"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.chip.Chip
            android:id="@+id/fruit"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="과일향"
            android:textAlignment="center"
            android:textColor="@color/checked_chip_textcolor"
            android:textSize="12sp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:checkedIconTint="#FFFFFF"
            app:chipBackgroundColor="@color/checked_chip_color"
            app:chipStrokeColor="#999999"
            app:chipStrokeWidth="1dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.chip.Chip
            android:id="@+id/sweet_sour"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="새콤달콤"
            android:textAlignment="center"
            android:textColor="@color/checked_chip_textcolor"
            android:textSize="12sp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:checkedIconTint="#FFFFFF"
            app:chipBackgroundColor="@color/checked_chip_color"
            app:chipStrokeColor="#999999"
            app:chipStrokeWidth="1dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.chip.Chip
            android:id="@+id/flower"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="꽃향"
            android:textAlignment="center"
            android:textColor="@color/checked_chip_textcolor"
            android:textSize="12sp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:checkedIconTint="#FFFFFF"
            app:chipBackgroundColor="@color/checked_chip_color"
            app:chipStrokeColor="#999999"
            app:chipStrokeWidth="1dp"
            tools:ignore="MissingConstraints" />
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipSpacingHorizontal="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup1">

        <com.google.android.material.chip.Chip
            android:id="@+id/refresh"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"
            android:text="청량감"
            android:textAlignment="center"
            android:textColor="@color/checked_chip_textcolor"
            android:textSize="12sp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:checkedIconTint="#FFFFFF"
            app:chipBackgroundColor="@color/checked_chip_color"
            app:chipIconVisible="false"
            app:chipStrokeColor="#999999"
            app:chipStrokeWidth="1dp"
            app:closeIconVisible="false"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.chip.Chip
            android:id="@+id/soft"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="부드러움"
            android:textAlignment="center"
            android:textColor="@color/checked_chip_textcolor"
            android:textSize="12sp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:checkedIconTint="#FFFFFF"
            app:chipBackgroundColor="@color/checked_chip_color"
            app:chipStrokeColor="#999999"
            app:chipStrokeWidth="1dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.chip.Chip
            android:id="@+id/bitter"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="씁쓸함"
            android:textAlignment="center"
            android:textColor="@color/checked_chip_textcolor"
            android:textSize="12sp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:checkedIconTint="#FFFFFF"
            app:chipBackgroundColor="@color/checked_chip_color"
            app:chipStrokeColor="#999999"
            app:chipStrokeWidth="1dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.chip.Chip
            android:id="@+id/rose"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="로제"
            android:textAlignment="center"
            android:textColor="@color/checked_chip_textcolor"
            android:textSize="12sp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:checkedIconTint="#FFFFFF"
            app:chipBackgroundColor="@color/checked_chip_color"
            app:chipStrokeColor="#999999"
            app:chipStrokeWidth="1dp"
            tools:ignore="MissingConstraints" />
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup2">

        <com.google.android.material.chip.Chip
            android:id="@+id/heavy"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="묵직함"
            android:textAlignment="center"
            android:textColor="@color/checked_chip_textcolor"
            android:textSize="12sp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:checkedIconTint="#FFFFFF"
            app:chipBackgroundColor="@color/checked_chip_color"
            app:chipStrokeColor="#999999"
            app:chipStrokeWidth="1dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.chip.Chip
            android:id="@+id/light"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="가벼움"
            android:textAlignment="center"
            android:textColor="@color/checked_chip_textcolor"
            android:textSize="12sp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:checkedIconTint="#FFFFFF"
            app:chipBackgroundColor="@color/checked_chip_color"
            app:chipStrokeColor="#999999"
            app:chipStrokeWidth="1dp"
            tools:ignore="MissingConstraints" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="최대 "
        app:layout_constraintStart_toStartOf="@+id/textView33"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#F37413"
        app:layout_constraintBottom_toBottomOf="@+id/textView37"
        app:layout_constraintStart_toEndOf="@+id/textView37" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만원"
        android:textColor="#F37413"
        app:layout_constraintBottom_toBottomOf="@+id/money"
        app:layout_constraintStart_toEndOf="@+id/money" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:text="채오니"
        android:textColor="#F37413"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>