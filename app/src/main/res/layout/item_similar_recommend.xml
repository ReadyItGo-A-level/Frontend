<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_recommend_similar"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/user_recommend_item_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/recommend_alcohol"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/common_alcohol_test"
            app:layout_constraintBottom_toBottomOf="@+id/constraintlayout_recommend_similar"
            app:layout_constraintEnd_toEndOf="@+id/constraintlayout_recommend_similar"
            app:layout_constraintStart_toStartOf="@+id/constraintlayout_recommend_similar"
            app:layout_constraintTop_toTopOf="@+id/constraintlayout_recommend_similar">
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout_recommend_similar">

        <TextView
            android:id="@+id/textview_similarrecommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="감튀랑 찰떡 궁합인 맥주"
            android:textColor="#111111"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

    <TextView
        android:id="@+id/textview_similarrecommend_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="content"
        android:textColor="#6A6A6A"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_similarrecommend_title" />

    <ImageView
        android:id="@+id/imageview_similarrecommend_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_all_jjan"
        app:layout_constraintEnd_toStartOf="@id/textview_similarrecommend_lovenum"
        app:layout_constraintTop_toTopOf="@+id/textview_similarrecommend_lovenum"/>

    <TextView
        android:id="@+id/textview_similarrecommend_lovenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:text="1"
        android:textColor="#B2B2B2"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_similarrecommend_scrap"
        app:layout_constraintTop_toTopOf="@+id/imageview_similarrecommend_scrap" />

    <ImageView
        android:id="@+id/imageview_similarrecommend_scrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_all_scrap"
        app:layout_constraintEnd_toStartOf="@+id/textview_similarrecommend_scrapnum"
        app:layout_constraintTop_toTopOf="@+id/textview_similarrecommend_scrapnum"/>

    <TextView
        android:id="@+id/textview_similarrecommend_scrapnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:text="3"
        android:textColor="#818181"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_similarrecommend_comment"
        app:layout_constraintTop_toTopOf="@+id/imageview_similarrecommend_comment" />

    <ImageView
        android:id="@+id/imageview_similarrecommend_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_all_comment"
        app:layout_constraintEnd_toStartOf="@+id/textview_similarrecommend_commentnum"
        app:layout_constraintTop_toTopOf="@+id/textview_similarrecommend_commentnum"/>

    <TextView
        android:id="@+id/textview_similarrecommend_commentnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:text="3"
        android:textColor="#818181"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_similarrecommend_content" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>