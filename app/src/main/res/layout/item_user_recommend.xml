<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="189dp"
    android:paddingHorizontal="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_recommend_user"
        android:layout_width="90dp"
        android:layout_height="125dp"
        android:background="@drawable/user_recommend_greyitem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageview_userrecommend_alcohol"
            android:layout_width="22dp"
            android:layout_height="84dp"
            android:src="@drawable/all_alcohol_image"
            app:layout_constraintBottom_toBottomOf="@+id/constraintlayout_recommend_user"
            app:layout_constraintEnd_toEndOf="@+id/constraintlayout_recommend_user"
            app:layout_constraintStart_toStartOf="@+id/constraintlayout_recommend_user"
            app:layout_constraintTop_toTopOf="@+id/constraintlayout_recommend_user">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_userrecommend_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="오이스터 베이"
        android:textColor="#767676"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout_recommend_user"
        tools:ignore="MissingConstraints">

    </TextView>

    <TextView
        android:id="@+id/textview_userrecommend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소비뇽 블랑"
        android:textColor="#111111"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_userrecommend_place"
        tools:ignore="MissingConstraints">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>