<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Alevel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/gray4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary2</item>
        <item name="colorSecondaryVariant">@color/gray2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="Theme.Alevel.ActionBar" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray4</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary2</item>
        <item name="colorSecondaryVariant">@color/gray2</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
        <!-- Customize your theme here. -->
        <item name="titleTextColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="actionMenuTextColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="SliderTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryVariant">#999999</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.Alevel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>
<!--    <style name="Theme.Alevel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->
<!--    <style name="Theme.Alevel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->
    <style name="Theme.Alevel.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />
    <style name="Theme.Alevel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="tabTextSizeBold" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#F37413</item>
        <item name="colorControlNormal">#CECECE</item>
    </style>
</resources>