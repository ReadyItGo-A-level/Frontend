<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/allalcoholsubcategory_item_rectangle"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    tools:context=".allalcohol.AllAlcoholSubCategoryFragment">

    <TextView
        android:id="@+id/textview_alcoholdetail_item_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        tools:text="유저닉네임"
        android:textColor="@color/gray4"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_alcoholdetail_item_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_alcoholdetail_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        tools:text="0000.00.00"
        android:textColor="@color/gray4"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_alcoholdetail_item_content"
        app:layout_constraintStart_toEndOf="@+id/textview_alcoholdetail_item_userid"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_alcoholdetail_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        tools:text="리뷰 내용"
        android:textColor="@color/gray6"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_item_userid" />
</androidx.constraintlayout.widget.ConstraintLayout>