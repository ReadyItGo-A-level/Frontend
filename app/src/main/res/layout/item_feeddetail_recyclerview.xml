<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/textview_feeddetail_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유저 닉네임:"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_feeddetail_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="댓글 내용"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textview_feeddetail_item_username"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_feeddetail_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0초 전"
        app:layout_constraintStart_toEndOf="@+id/textview_feeddetail_item_content"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>