<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="16dp"
    tools:context=".allalcohol.AllAlcoholSubCategoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_allalcoholsubcategory_item"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/allalcoholsubcategory_item_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview_allalcoholsubcategory_item_liquor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/all_alcohol_image"
            app:layout_constraintBottom_toBottomOf="@+id/constraintlayout_allalcoholsubcategory_item"
            app:layout_constraintEnd_toEndOf="@+id/constraintlayout_allalcoholsubcategory_item"
            app:layout_constraintStart_toStartOf="@+id/constraintlayout_allalcoholsubcategory_item"
            app:layout_constraintTop_toTopOf="@+id/constraintlayout_allalcoholsubcategory_item" />

        <ImageView
            android:id="@+id/imageview_allalcoholsubcategory_item_scrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/all_icon_scrap24"
            app:layout_constraintBottom_toBottomOf="@+id/constraintlayout_allalcoholsubcategory_item"
            app:layout_constraintEnd_toEndOf="@+id/constraintlayout_allalcoholsubcategory_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_allalcoholsubcategory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        tools:text="술 이름"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout_allalcoholsubcategory_item" />

    <TextView
        android:id="@+id/textview_allalcoholsubcategory_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        tools:text="00원"
        android:textColor="@color/gray6"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_allalcoholsubcategory_title" />

    <TextView
        android:id="@+id/textview_allalcoholsubcategory_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        tools:text="・000ml"
        android:textColor="@color/gray6"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/textview_allalcoholsubcategory_price"
        app:layout_constraintTop_toBottomOf="@+id/textview_allalcoholsubcategory_title" />

    <ImageView
        android:id="@+id/imageview_allalcoholsubcategory_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2.5dp"
        android:src="@drawable/allalcohol_icon_volume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_allalcoholsubcategory_price" />

    <TextView
        android:id="@+id/textview_allalcoholsubcategory_abv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="00%"
        android:textColor="@color/gray6"
        android:textSize="12dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/imageview_allalcoholsubcategory_volume"
        app:layout_constraintTop_toBottomOf="@+id/textview_allalcoholsubcategory_price" />
</androidx.constraintlayout.widget.ConstraintLayout>