<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_recommend_popular"
        android:layout_width="260dp"
        android:layout_height="146dp"
        android:background="@drawable/recommend_grey_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textview_popularrecommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="title"
            android:textColor="#111111"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/constraintlayout_recommend_popular"
            app:layout_constraintStart_toStartOf="@+id/constraintlayout_recommend_popular"/>

        <TextView
            android:id="@+id/textview_popularrecommend_content"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="회기 서래맥주 갈매기살 뿌링클튀김"
            android:textColor="#6A6A6A"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textview_popularrecommend_title"
            app:layout_constraintTop_toBottomOf="@+id/textview_popularrecommend_title"
            />

        <ImageView
            android:id="@+id/imageview_popular_image"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/common_alcohol_test"
            app:layout_constraintEnd_toEndOf="@+id/constraintlayout_recommend_popular"
            app:layout_constraintTop_toTopOf="@+id/textview_popularrecommend_content"></ImageView>

        <ImageView
            android:id="@+id/imageview_popularrecommend_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_all_jjan"
            app:layout_constraintStart_toStartOf="@+id/textview_popularrecommend_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_popular_image"/>

        <TextView
            android:id="@+id/textview_popularrecommend_lovenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="1"
            android:textColor="#B2B2B2"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageview_popularrecommend_love"
            app:layout_constraintTop_toTopOf="@+id/imageview_popularrecommend_love" />

        <ImageView
            android:id="@+id/imageview_popularrecommend_scrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_all_scrap"
            app:layout_constraintStart_toEndOf="@+id/textview_popularrecommend_lovenum"
            app:layout_constraintTop_toTopOf="@+id/textview_popularrecommend_lovenum"/>

        <TextView
            android:id="@+id/textview_popularrecommend_scrapnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:text="3"
            android:textColor="#B2B2B2"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageview_popularrecommend_scrap"
            app:layout_constraintTop_toTopOf="@+id/imageview_popularrecommend_scrap" />

        <ImageView
            android:id="@+id/imageview_popularrecommend_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_all_comment"
            app:layout_constraintStart_toEndOf="@+id/textview_popularrecommend_scrapnum"
            app:layout_constraintTop_toTopOf="@+id/textview_popularrecommend_scrapnum"/>

        <TextView
            android:id="@+id/textview_popularrecommend_commentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="3"
            android:textColor="#B2B2B2"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageview_popularrecommend_comment"
            app:layout_constraintTop_toTopOf="@+id/imageview_popularrecommend_comment" />
    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>