<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.StartActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageview_start_logo"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="191dp"
        android:src="@drawable/ic_start_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageview_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_start_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_start_logo"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_start_kakao_login"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/all_round_button"
        android:backgroundTint="#F7E14B"
        android:gravity="center"
        android:text="카카오톡으로 시작하기"
        android:textColor="#381F1F"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_start_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_start_text" />

    <Button
        android:id="@+id/button_start_signup"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/start_button_stroke"
        android:gravity="center"
        android:text="이메일로 시작하기"
        android:textColor="#191919"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_start_kakao_login" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_start_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_start_signup">

        <TextView
            android:id="@+id/textview_start_already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미 가입하셨나요?"
            android:textColor="#6A6A6A"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textview_start_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="로그인"
            android:textColor="#111111"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textview_start_already"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/constraintLayout_start_under"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_start_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="이용약관"
            android:textAlignment="center"
            android:textColor="#B2B2B2"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/textview_start_first_login"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textview_start_first_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="첫 로그인시"
            android:textAlignment="center"
            android:textColor="#B2B2B2"
            android:textSize="12sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textview_start_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="및"
            android:textAlignment="center"
            android:textColor="#B2B2B2"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/textview_start_terms"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_start_under"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_start_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="을 동의한 것으로 간주합니다."
            android:textAlignment="center"
            android:textColor="#B2B2B2"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textview_start_information"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textview_start_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보처리방침"
            android:textAlignment="center"
            android:textColor="#B2B2B2"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>