<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_alcoholdetail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_alcoholdetail">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_alcoholdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/allalcoholsubcategory_item_rectangle"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageview_alcoholdetail_liquor"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/allalcoholsubcategory_item_testimage"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintlayout_alcoholdetail"
                    app:layout_constraintEnd_toEndOf="@+id/constraintlayout_alcoholdetail"
                    app:layout_constraintStart_toStartOf="@+id/constraintlayout_alcoholdetail"
                    app:layout_constraintTop_toTopOf="@+id/constraintlayout_alcoholdetail" />

                <ImageView
                    android:id="@+id/imageview_alcoholdetail_scrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/all_scrapicon"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintlayout_alcoholdetail"
                    app:layout_constraintEnd_toEndOf="@+id/constraintlayout_alcoholdetail"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@+id/imageview_alcoholdetail_liquor" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textview_alcoholdetail_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/allalcoholsubcategory_item_rectangle"
                android:padding="5dp"
                android:text="술 종류"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintlayout_alcoholdetail" />

            <TextView
                android:id="@+id/textview_alcoholdetail_pairing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/allalcoholsubcategory_item_rectangle"
                android:padding="5dp"
                android:text="음식1, 음식2"
                app:layout_constraintStart_toEndOf="@+id/textview_alcoholdetail_category"
                app:layout_constraintTop_toBottomOf="@+id/constraintlayout_alcoholdetail" />

            <TextView
                android:id="@+id/textview_alcoholdetail_taste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/allalcoholsubcategory_item_rectangle"
                android:padding="5dp"
                android:text="맛1, 맛2, 맛3"
                app:layout_constraintStart_toEndOf="@+id/textview_alcoholdetail_pairing"
                app:layout_constraintTop_toBottomOf="@+id/constraintlayout_alcoholdetail" />

            <TextView
                android:id="@+id/textview_alcoholdetail_abv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/allalcoholsubcategory_item_rectangle"
                android:padding="5dp"
                android:text="도수"
                app:layout_constraintStart_toEndOf="@+id/textview_alcoholdetail_taste"
                app:layout_constraintTop_toBottomOf="@+id/constraintlayout_alcoholdetail" />

            <TextView
                android:id="@+id/textview_feeddetail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="술 이름"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_category" />

            <TextView
                android:id="@+id/textview_feeddetail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="예상 가격 00000원(000ml)"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_feeddetail_name" />

            <TextView
                android:id="@+id/textview_alcoholdetail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="상세 설명 텍스트"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_feeddetail_content" />

            <TextView
                android:id="@+id/textview_feeddetail_commentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="한 줄 리뷰"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_content" />

            <TextView
                android:id="@+id/textview_alcoholdetail_writeshortreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="작성하기"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_content" />

            <TextView
                android:id="@+id/textview_alcoholdetail_shortreviewplaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="첫 번째 리뷰어가 되어주세요!"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_feeddetail_commentcount"
                app:layout_constraintVertical_bias="0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_alcoholdetail_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/textview_alcoholdetail_text2"
                app:layout_constraintTop_toBottomOf="@+id/textview_feeddetail_commentcount"
                tools:listitem="@layout/item_alcoholdetail_recyclerviewreview" />

            <TextView
                android:id="@+id/textview_alcoholdetail_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="게시글 리뷰"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/recyclerview_alcoholdetail_postreview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerview_alcoholdetail_review" />

            <TextView
                android:id="@+id/textview_alcoholdetail_writepostreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:text="작성하기"
                app:layout_constraintBottom_toTopOf="@+id/recyclerview_alcoholdetail_postreview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerview_alcoholdetail_review"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textview_alcoholdetail_postreviewplaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="첫 번째 리뷰어가 되어주세요!"
                app:layout_constraintBottom_toTopOf="@+id/textview_alcoholdetail_text3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_text2"
                app:layout_constraintVertical_bias="0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_alcoholdetail_postreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:scrollbars="none"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/textview_alcoholdetail_text3"
                tools:listitem="@layout/item_alcoholdetail_recyclerviewpost" />

            <TextView
                android:id="@+id/textview_alcoholdetail_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="유저들이 추천한 다른 술도 보실래요?"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/recyclerview_alcoholdetail_recommend"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_alcoholdetail_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_alcoholdetail_recyclerviewpost" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>