<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedscrollview_feeddetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_feeddetail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_feeddetail">

            <TextView
                android:id="@+id/textview_feeddetail_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유저 닉네임"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageview_feeddetail_photo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/common_roundrectangle"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/common_alcohol_test"
                app:layout_constraintTop_toBottomOf="@+id/textview_feeddetail_username" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieView"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/imageview_feeddetail_photo"
                app:layout_constraintEnd_toEndOf="@+id/imageview_feeddetail_photo"
                app:layout_constraintStart_toStartOf="@+id/imageview_feeddetail_photo"
                app:layout_constraintTop_toTopOf="@+id/imageview_feeddetail_photo"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/hearts" />

            <TextView
                android:id="@+id/textview_feeddetail_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/allalcoholsubcategory_item_rectangle"
                android:padding="5dp"
                android:text="술 종류"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageview_feeddetail_photo" />

            <TextView
                android:id="@+id/textview_feeddetail_pairing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/allalcoholsubcategory_item_rectangle"
                android:padding="5dp"
                android:text="음식1, 음식2"
                app:layout_constraintStart_toEndOf="@+id/textview_feeddetail_category"
                app:layout_constraintTop_toBottomOf="@+id/imageview_feeddetail_photo" />

            <TextView
                android:id="@+id/textview_feeddetail_taste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/allalcoholsubcategory_item_rectangle"
                android:padding="5dp"
                android:text="맛1, 맛2, 맛3"
                app:layout_constraintStart_toEndOf="@+id/textview_feeddetail_pairing"
                app:layout_constraintTop_toBottomOf="@+id/imageview_feeddetail_photo" />

            <TextView
                android:id="@+id/textview_feeddetail_abv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/allalcoholsubcategory_item_rectangle"
                android:padding="5dp"
                android:text="도수"
                app:layout_constraintStart_toEndOf="@+id/textview_feeddetail_taste"
                app:layout_constraintTop_toBottomOf="@+id/imageview_feeddetail_photo" />

            <TextView
                android:id="@+id/textview_feeddetail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="게시글 제목"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_feeddetail_category" />

            <TextView
                android:id="@+id/textview_feeddetail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="게시글 내용"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_feeddetail_name" />

            <TextView
                android:id="@+id/textview_feeddetail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="0000.00.00 00:00"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_feeddetail_content" />

            <ImageView
                android:id="@+id/imageview_feeddetail_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_thumbup_test"
                app:layout_constraintEnd_toStartOf="@+id/imageview_feeddetail_scrap"
                app:layout_constraintTop_toBottomOf="@+id/textview_feeddetail_content" />

            <ImageView
                android:id="@+id/imageview_feeddetail_scrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/all_icon_scrap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_feeddetail_content" />

            <TextView
                android:id="@+id/textview_feeddetail_scrapcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스크랩 0개"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageview_feeddetail_scrap" />

            <TextView
                android:id="@+id/textview_feeddetail_likecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="짠 0개"
                android:textSize="10dp"
                app:layout_constraintEnd_toStartOf="@id/textview_feeddetail_scrapcount"
                app:layout_constraintTop_toBottomOf="@+id/imageview_feeddetail_like" />

            <View
                android:id="@+id/view_feed"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:background="@color/cardview_shadow_start_color"
                app:layout_constraintTop_toBottomOf="@+id/textview_feeddetail_date" />

            <TextView
                android:id="@+id/textview_feeddetail_commentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="댓글 0개"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_feed" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_feeddetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/textview_feeddetail_commentcount"
                tools:listitem="@layout/item_feeddetail_recyclerview" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>