<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_writefeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearlayout_writefeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="14dp"
        android:paddingVertical="22dp"
        android:background="@drawable/writefeed_top_under"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_writefeed">

        <LinearLayout
            android:id="@+id/linearlayout_writefeed_before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center_vertical"
            tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_heart_smile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:text="술 정보를 공유한 유저는\n더 많은 관심을 끌고 있어요!" />

        <Button
            android:id="@+id/button_writefeed_info"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#767676"
            android:background="@drawable/writefeed_border_grey"
            android:text="정보 입력 >" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_writefeed_after"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner_writefeed_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingVertical="6dp"
            android:paddingHorizontal="14dp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/imageview_writefeed_photo"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/common_alcohol_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_writefeed" />

    <EditText
        android:id="@+id/edittext_writefeed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="제목을 입력해주세요"
        app:layout_constraintTop_toBottomOf="@id/imageview_writefeed_photo" />

    <EditText
        android:id="@+id/edittext_writefeed_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="내용을 입력해주세요"
        app:layout_constraintTop_toBottomOf="@id/edittext_writefeed_title" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingbutton_writefeed_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/feed_writeicon_test"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>