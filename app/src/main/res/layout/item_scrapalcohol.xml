<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_scrapalcohol_background"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/mypage_constraintlayout_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview_scrapalcohol_alcohol"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/allalcoholsubcategory_item_testimage"
            app:layout_constraintBottom_toBottomOf="@+id/constraintlayout_scrapalcohol_background"
            app:layout_constraintEnd_toEndOf="@+id/constraintlayout_scrapalcohol_background"
            app:layout_constraintStart_toStartOf="@+id/constraintlayout_scrapalcohol_background"
            app:layout_constraintTop_toTopOf="@+id/constraintlayout_scrapalcohol_background" />

        <ImageView
            android:id="@+id/imageview_scrapalcohol_scrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/mypage_scrap"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_scrapalcohol_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="소비뇽 블랑 750ml"
        android:textColor="#6A6A6A"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/constraintlayout_scrapalcohol_background"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout_scrapalcohol_background" />

    <TextView
        android:id="@+id/textview_scrapalcohol_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24,800"
        android:textColor="#111111"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/textview_scrapalcohol_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_scrapalcohol_name" />

    <ImageView
        android:id="@+id/imageview_scrapalcohol_abv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textview_scrapalcohol_price"
        app:layout_constraintTop_toBottomOf="@+id/textview_scrapalcohol_price"
        app:srcCompat="@drawable/mypage_abv" />

    <TextView
        android:id="@+id/textview_scrapalcohol_abv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="13 (℃)"
        android:textColor="#767676"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_scrapalcohol_abv"
        app:layout_constraintStart_toEndOf="@+id/imageview_scrapalcohol_abv"
        app:layout_constraintTop_toTopOf="@+id/imageview_scrapalcohol_abv" />

</androidx.constraintlayout.widget.ConstraintLayout>