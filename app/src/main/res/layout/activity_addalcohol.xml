<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.AddAlcoholActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="신규 술 등록"
            android:textColor="#111111"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearlayout_addalcohol_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/addalcohol_intro"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="14dp"
                    android:text="한잔할래에서 보고 싶은 술을 알려주세요"
                    android:textColor="#F37423"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp"
                    android:text="*술 종류, 이름, 추천 이유는 필수 입력값입니다"
                    android:textColor="#F37423"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_addalcohol_alcoholtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="술 종류"
                    android:textColor="#111111"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="30dp"
                    android:text="*"
                    android:textColor="#F37423"
                    android:textSize="16sp" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radiogroup_addalcohol_alcoholtype"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/addalcohol_radiobutton"
                    android:button="@null"
                    android:textColor="#B2B2B2"
                    android:textSize="14sp" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4.5dp"
                    android:layout_marginEnd="4.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/addalcohol_radiobutton"
                    android:button="@null"
                    android:textColor="#B2B2B2"
                    android:textSize="14sp" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4.5dp"
                    android:layout_marginEnd="4.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/addalcohol_radiobutton"
                    android:button="@null"
                    android:textColor="#B2B2B2"
                    android:textSize="14sp" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/addalcohol_radiobutton"
                    android:button="@null"
                    android:textColor="#B2B2B2"
                    android:textSize="14sp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4.5dp"
                    android:layout_weight="1"
                    android:text="와인"
                    android:textAlignment="center"
                    android:textColor="#B2B2B2"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4.5dp"
                    android:layout_marginEnd="4.5dp"
                    android:layout_weight="1"
                    android:text="맥주"
                    android:textAlignment="center"
                    android:textColor="#B2B2B2"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4.5dp"
                    android:layout_marginEnd="4.5dp"
                    android:layout_weight="1"
                    android:text="양주"
                    android:textAlignment="center"
                    android:textColor="#B2B2B2"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4.5dp"
                    android:layout_weight="1"
                    android:text="전통주"
                    android:textAlignment="center"
                    android:textColor="#B2B2B2"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_addalcohol_alcohoname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="술 이름"
                    android:textColor="#111111"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="30dp"
                    android:text="*"
                    android:textColor="#F37423"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edittext_addalcohol_alcoholname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mypage_edittext"
                android:textColor="#6A6A6A" />

            <TextView
                android:id="@+id/textview_addalcohol_alcoholvolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="용량"
                android:textColor="#111111"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edittext_addalcohol_alcoholvolume"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mypage_edittext"
                android:textColor="#6A6A6A" />

            <TextView
                android:id="@+id/textview_addalcohol_alcoholprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="가격"
                android:textColor="#111111"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edittext_addalcohol_alcoholprice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mypage_edittext"
                android:textColor="#6A6A6A" />

            <TextView
                android:id="@+id/textview_addalcohol_alcoholabv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="도수"
                android:textColor="#111111"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edittext_addalcohol_alcoholabv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mypage_edittext"
                android:textColor="#6A6A6A" />

            <TextView
                android:id="@+id/textview_addalcohol_alcoholvendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="판매처"
                android:textColor="#111111"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edittext_addalcohol_alcoholsell"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mypage_edittext"
                android:textColor="#6A6A6A" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_addalcohol_reccommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="추천 이유"
                    android:textColor="#111111"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="30dp"
                    android:text="*"
                    android:textColor="#F37423"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edittext_addalcohol_recommend"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mypage_edittext"
                android:textColor="#6A6A6A" />

            <Button
                android:id="@+id/button_addalcohol_summit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="51dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#F37413"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:text="등록하기"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="6dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
