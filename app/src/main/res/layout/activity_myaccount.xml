<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.MyAccountActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="내 계정"
            android:textColor="#4E4E4E"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="별명"
        android:textColor="#383838"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/mypage_text"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:paddingStart="14dp"
        android:text="와인러버"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_nickname"
        app:layout_constraintStart_toStartOf="@+id/nickname"
        app:layout_constraintTop_toBottomOf="@+id/nickname" />

    <Button
        android:id="@+id/btn_nickname"
        android:layout_width="54dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/myaccount_button"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="변경"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName3" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text="이메일주소"
        android:textColor="#383838"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <TextView
        android:id="@+id/email2"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/mypage_text"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:text="lwieu24@naver.com"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName3"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text="비밀번호"
        android:textColor="#383838"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email2" />

    <TextView
        android:id="@+id/pw2"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/mypage_text"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:text="*********"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/button_password"
        app:layout_constraintStart_toStartOf="@+id/pw"
        app:layout_constraintTop_toBottomOf="@+id/pw" />

    <Button
        android:id="@+id/button_password"
        android:layout_width="54dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/myaccount_button"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="변경"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/pw2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pw2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/div_line1"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="18dp"
        android:background="#F6F6F6"
        app:layout_constraintTop_toBottomOf="@+id/pw2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_logout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_line1">

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:text="로그아웃"
            android:textColor="#383838"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/const_logout"
            app:layout_constraintStart_toStartOf="@id/const_logout"
            app:layout_constraintTop_toTopOf="@id/const_logout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text=">"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/logout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/div_line2"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#EAEAEA"
        app:layout_constraintTop_toBottomOf="@+id/const_logout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_secession"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_line2">

        <TextView
            android:id="@+id/secession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:text="회원 탈퇴"
            android:textColor="#383838"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/const_secession"
            app:layout_constraintStart_toStartOf="@id/const_secession"
            app:layout_constraintTop_toTopOf="@id/const_secession" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text=">"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/secession"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/secession" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/div_line3"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#EAEAEA"
        app:layout_constraintTop_toBottomOf="@+id/const_secession" />

</androidx.constraintlayout.widget.ConstraintLayout>