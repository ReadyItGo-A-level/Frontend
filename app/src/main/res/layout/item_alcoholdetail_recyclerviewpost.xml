<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="10dp">

    <ImageView
        android:id="@+id/imageview_alcoholdetail_item"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/allalcoholsubcategory_item_rectangle"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/common_alcohol_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_alcoholdetail_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="게시글 제목"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_alcoholdetail_item" />

    <TextView
        android:id="@+id/textview_alcoholdetail_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        tools:text="게시글 내용"
        android:textColor="@color/gray6"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_item_title" />

    <ImageView
        android:id="@+id/imageview_alcoholdetail_item_cheers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/all_icon_cheers16"
        app:layout_constraintEnd_toStartOf="@+id/textview_alcoholdetail_item_likecount"
        app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_item_content" />

    <TextView
        android:id="@+id/textview_alcoholdetail_item_likecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        tools:text="0"
        android:textColor="@color/gray4"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageview_alcoholdetail_item_scrap"
        app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_item_content" />

    <ImageView
        android:id="@+id/imageview_alcoholdetail_item_scrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/all_icon_scrap16"
        app:layout_constraintEnd_toStartOf="@+id/textview_alcoholdetail_item_scrapcount"
        app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_item_content" />

    <TextView
        android:id="@+id/textview_alcoholdetail_item_scrapcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        tools:text="0"
        android:textColor="@color/gray4"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageview_alcoholdetail_item_comment"
        app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_item_content" />

    <ImageView
        android:id="@+id/imageview_alcoholdetail_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/all_icon_comment16"
        app:layout_constraintEnd_toStartOf="@+id/textview_alcoholdetail_item_commentcount"
        app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_item_content" />

    <TextView
        android:id="@+id/textview_alcoholdetail_item_commentcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        tools:text="0"
        android:textColor="@color/gray4"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_alcoholdetail_item_content" />

</androidx.constraintlayout.widget.ConstraintLayout>