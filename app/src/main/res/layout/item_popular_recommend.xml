<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_recommend_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_recommend_item_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/recommend_article"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/common_alcohol_test"
            app:layout_constraintBottom_toBottomOf="@+id/constraintlayout_recommend_popular"
            app:layout_constraintEnd_toEndOf="@+id/constraintlayout_recommend_popular"
            app:layout_constraintStart_toStartOf="@+id/constraintlayout_recommend_popular"
            app:layout_constraintTop_toTopOf="@+id/constraintlayout_recommend_popular">
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_popularrecommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="title"
        android:textColor="#433E50"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout_recommend_popular">

    </TextView>

    <TextView
        android:id="@+id/textview_popularrecommend_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="content"
        android:textColor="#433E50"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_popularrecommend_title" />

    <TextView
        android:id="@+id/textview_popularrecommend_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="짠"
        android:textColor="#818181"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_popularrecommend_content" />

    <TextView
        android:id="@+id/textview_popularrecommend_lovenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="1"
        android:textColor="#818181"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/textview_popularrecommend_love"
        app:layout_constraintTop_toTopOf="@+id/textview_popularrecommend_love" />

    <TextView
        android:id="@+id/textview_popularrecommend_scrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="스크랩"
        android:textColor="#818181"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/textview_popularrecommend_lovenum"
        app:layout_constraintTop_toTopOf="@+id/textview_popularrecommend_lovenum" />

    <TextView
        android:id="@+id/textview_poupularrecommend_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="댓글"
        android:textColor="#818181"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/textview_popularrecommend_scrapnum"
        app:layout_constraintTop_toTopOf="@+id/textview_popularrecommend_scrapnum" />

    <TextView
        android:id="@+id/textview_popularrecommend_commentnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="3"
        android:textColor="#818181"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/textview_poupularrecommend_comment"
        app:layout_constraintTop_toTopOf="@+id/textview_poupularrecommend_comment" />

    <TextView
        android:id="@+id/textview_popularrecommend_scrapnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="3"
        android:textColor="#818181"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/textview_popularrecommend_scrap"
        app:layout_constraintTop_toTopOf="@+id/textview_popularrecommend_scrap" />

</androidx.constraintlayout.widget.ConstraintLayout>